@model Task1.Models.Application

@{
    ViewData["Title"] = "Send Email";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border border-success">
                    <div class="card-header bg-success text-light">
                        Send Email
                    </div>
                    <div class="card-body">
                        @if (TempData["EmailSent"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["EmailSent"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <h5 class="card-title text-dark text-center mb-3">Applicant Name: @Model.FullName</h5>

                        <form action="@Url.Action("ApproveAndRedirect", new { id = Model.ApplicationId })" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="dateTimePicker" class="form-label text-primary mb-3">Set Date & Time </label>
                                <input type="datetime-local" class="form-control" id="dateTimePicker" name="scheduledDateTime" required>
                            </div>
                            <div class="d-flex justify-content-between mt-5">
                                <a href="@Url.Action("ViewDetails", new { id = Model.ApplicationId })" class="btn btn-outline-dark btn-sm">Return Back</a>
                                <button type="submit" class="btn btn-outline-warning btn-sm">Send Email</button>
                            </div>
                        
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
