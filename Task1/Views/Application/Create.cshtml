@model Task1.Models.Application


@{
    ViewData["Title"] = "Apply Now";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Application Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-2 mb-5">
        <div class="card border-success p-3 shadow-lg shadow-success">
            <div class="card-body">
                <h2 class="card-title text-success">USAL Application Form</h2>
             
                <form asp-action="Create" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger no-bullets" })
                    <div class="mb-3">
                        <label for="FullName" class="form-label text-success" asp-for="FullName"></label>
                        <input type="text" class="form-control" id="FullName" name="FullName" asp-for="FullName" required>
                        <div class="invalid-feedback">
                            Please enter your full name.
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label text-success" asp-for="Email"></label>
                        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required>
                        <div class="invalid-feedback">
                            Please enter a valid email address.
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="TelephoneNumber" class="form-label text-success" asp-for="TelephoneNumber"></label>
                        <input type="tel" class="form-control" id="TelephoneNumber" name="TelephoneNumber" asp-for="TelephoneNumber">
                        <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label text-success" asp-for="Address"></label>
                        <textarea class="form-control" id="Address" name="Address" asp-for="Address" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3 ">
                        <label class="text-success" asp-for="Gender"></label><br>
                        <label><input type="radio" name="Gender" value="Male" asp-for="Gender"> Male</label>
                        <label><input type="radio" name="Gender" value="Female" asp-for="Gender"> Female</label>
                        <label><input type="radio" name="Gender" value="Other" asp-for="Gender"> Other</label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="DateOfBirth" class="form-label text-success">Date of Birth</label>
                        <input type="date" class="form-control text-dark" id="DateOfBirth" name="DateOfBirth" asp-for="DateOfBirth">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Major" class="form-label text-success" asp-for="Major"></label>
                        <select class="form-select text-dark" id="Major" name="Major" asp-for="Major" required>
                            <option value="">Select a major</option>
                            <option value="Computer Science">Computer Science</option>
                            <option value="Engineering">Engineering</option>
                            <option value="Business">Business</option>

                        </select>
                        <div class="invalid-feedback">
                            Please select a major.
                        </div>
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PdfFile" for="PdfFile" class="form-label text-success">Upload PDF File</label>
                        <input type="file" asp-for="PdfFile" class="form-control" id="PdfFile" accept=".pdf">
                        <span asp-validation-for="PdfFile" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-lg mt-3">Apply</button>
                </form>
            </div>
        </div>
    </div>

